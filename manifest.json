{
	"manifest_version": 3,
	"name": "Coddle",
	"version": "1.0",
	"description": "Replace common trigger words with nice words instead.",
	"icons": {
		"16": "google_alerts.png",
		"48": "google_alerts.png",
		"128": "google_alerts.png"
	},
	"action": {
		"default_icon": "google_alerts.png",
		"default_popup": "popup.html",
		"default_title": "My custom Google Chrome extension"
	},
	"content_scripts": [
		{
			"matches": ["https://www.drudgereport.com/*"],
			"js": ["jquery.min.js", "./main.js"],
			"css": ["index.css"]
		}
	]
}
