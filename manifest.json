{
	"manifest_version": 3,
	"name": "Coddle",
	"version": "1.0",
	"description": "Replace common trigger words with nice words instead.",
	"icons": {
		"16": "baby.png",
		"48": "baby.png",
		"128": "baby.png"
	},
	"action": {
		"default_icon": "baby.png",
		"default_popup": "popup.html",
		"default_title": "Coddle"
	},
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["main.js"],
			"css": ["index.css"]
		}
	]
}
